<MySwiper@MDSwiperItem>

<PhotoCamera>
    Camera:
        play: True
        resolution: (640,640)
        index: 0

MDScreen:

    MDBoxLayout:
        orientation: 'horizontal'
        
        MDLabel:
            id: stopWatchLabel
            text: "Start Your Routine"
            halign: "left"
            valign: "bottom"

        Camera:
            play: True
            resolution: (640,640)
            index: 0
            halign: "center"
        
        MDLabel:
            id: FeedbackLabel
            text: "Hold the displayed pose"
            halign: "left"
            valign: "bottom"
        
        Image:
            id: yogaPose
            source: "assets/usage/tree.jpg"
            allow_stretch: False
            keep_ratio: False


    MDBottomAppBar:
        MDToolbar:
            id: toolbar
            icon: 'cast'
            left_action_items: [["menu", lambda x: app.buttonCallback()]]
            title: "YOUR VIRTUAL YOGA TRAINER"
            type: 'bottom'
            #mode: "free-end"
            mode: 'end'
            #mode: 'center'
            #mode: 'free-center'
            # Click The Button
            on_action_button: app.buttonCallback()
