<MySwiper@MDSwiperItem>

<PhotoCamera>
    Camera:
        play: True
        resolution: (640,640)
        index: 0

MDScreen:
    MDToolbar:
        id: toolbar
        title: "YOUR VIRTUAL YOGA TRAINER" 
        left_action_items: [["menu", lambda x: app.callback(x)]]
        icon: "git"
        pos_hint: {"top": 1}
    
    MDSwiper:
        size_hint_y: None
        height: root.height - toolbar.height - dp(40)
        y: root.height - self.height - toolbar.height - dp(20)

        MySwiper:
            FitImage:
                source: "assets/usage/top-banner.png"
                radius: [20,]
   
        MySwiper:
            FitImage:
                source: "assets/usage/instruct.png"
                radius: [20,]
        
        MySwiper:
            FitImage:
                source: "assets/usage/yoga_2.jpeg"
                radius: [20,]
